{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "experimentalDecorators": true,
      "strictNullChecks": false,
      "esModuleInterop": true,
      "target": "ES2022",
      "lib": [
        "ESNext"
      ],
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }